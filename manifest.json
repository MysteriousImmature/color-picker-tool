{
    "manifest_version": 3,
    "name": "Color Picker",
    "version": "1.0",
    "description": "A simple color picker tool.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon32.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": ["clipboardWrite"],
    "browser_specific_settings": {
        "gecko": {
            "id": "colorpicker@mysteriousimmature.com",
            "strict_min_version": "109.0"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon32.png",
        "128": "icons/icon128.png"
    }
}
